{
    "manifest_version": 2,
    "name": "YouTimer",
    "version": "1.0",

    "description": "Tracks time spent on youtube, and blocks the site if I spend too much time on there",

    "permissions": [
        "activeTab",
        "storage"
    ],

    "background": {
        "scripts": ["scripts/timer_v2.js"]
    },

    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*", "*://*.mozilla.org/*"],
            "js": ["scripts/detector.js"]
        }
    ]
}
