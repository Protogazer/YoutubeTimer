{
    "manifest_version": 2,
    "name": "YouTimer",
    "version": "1.0",

    "description": "Tracks time spent on youtube, and blocks the site if I spend too much time on there",

    "permissions": [
        "activeTab",
        "storage"
    ],

    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/watch*"],
            "js": ["scripts/timer.js"]
        }
    ]
}
